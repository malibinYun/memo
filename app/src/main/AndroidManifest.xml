<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.malibin.memo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".config.MemoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.memo.MemosActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.memo.edit.MemoEditActivity">

        </activity>
        <activity android:name=".ui.category.select.CategorySelectActivity"></activity>
        <activity android:name=".ui.category.CategoriesActivity" />
        <activity android:name=".ui.category.addmodify.AddModifyCategoryActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>